{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "adminusername": {
            "type": "string",
            "metadata": {
                "description": "Username for the Virtual Machine."
            }
        },
        "adminpassword": {
            "type": "string",
            "metadata": {
                "description": "Password for the Virtual Machine."
            }
        },
        "adminemail": {
            "type": "string",
            "metadata": {
                "description": "Admin email for Redis"
            }
        },
        "dnsHAA": {
            "defaultValue": "DNS-HAA",
            "type": "string",
            "metadata": {
                "description": "DNS suffix"
            }
        },
        "dnsOrch": {
            "defaultValue": "DNS-ORCH",
            "type": "string",
            "metadata": {
                "description": "DNS suffix"
            }
        }
    },
    "variables": {
    },
    "resources": [
        {
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2018-05-01",
            "name": "linkedOrch",
            "dependsOn": [
                "linkedHaa"
            ],
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "https://raw.githubusercontent.com/hteo1337/DSF-Certification-ARMSkeleton/master/Environments/LinkedTemplate/Orch/azuredeploy.json",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "adminusername": {
                        "value": "[parameters('adminusername')]"
                    },
                    "adminpassword": {
                        "value": "[parameters('adminpassword')]"
                    },
                    "dnsOrch": {
                        "value": "[parameters('dnsOrch')]"
                    }
                }
            }
        },
        {
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2018-05-01",
            "name": "linkedHaa",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "https://raw.githubusercontent.com/hteo1337/DSF-Certification-ARMSkeleton/master/Environments/LinkedTemplate/HAA/azuredeploy.json",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "adminusername": {
                        "value": "[concat(parameters('adminusername'),'-haa')]"
                    },
                    "adminemail": {
                        "value": "[parameters('adminemail')]"
                    },
                    "adminpassword": {
                        "value": "[parameters('adminpassword')]"
                    },
                    "dnsHAA": {
                        "value": "[parameters('dnsHAA')]"
                    }
                }
            }
        }
    ],
    "outputs": {
        "OrchestratorVMUser": {
            "value": "[parameters('adminusername')]",
            "type": "string"
        },
        "OrchestratorVMPass": {
            "value": "[parameters('adminpassword')]",
            "type": "string"
        },
        "HAA-adminEmail": {
            "value": "[parameters('adminemail')]",
            "type": "string"
        },
        "HAAConnectionString":{
            "value": "[reference('linkedHaa').outputs.HAAConnectionString.value]",
            "type": "string"
        },
        "HAA-DNS":{
            "value": "[reference('linkedHaa').outputs.fqdn.value]",
            "type": "string"
        },
        "OrchestratorDNS":{
            "value": "[reference('linkedOrch').outputs.fqdn.value]",
            "type": "string"
        }
    }
}
